<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTabView">
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabTextDefaultColor" format="color"></attr>
        <attr name="tabTextSelectColor" format="color"></attr>
        <attr name="tabLineDefaultColor" format="color"></attr>
        <attr name="tabLineSelectColor" format="color"></attr>
        <attr name="tabBackground" format="reference|color" />
        <attr name="tabLineHeight" format="dimension" />
        <attr name="tabTextPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>
    <declare-styleable name="DragSortListView">
        <attr name="collapsed_height" format="dimension" />
        <attr name="drag_scroll_start" format="float" />
        <attr name="max_drag_scroll_speed" format="float" />
        <attr name="float_background_color" format="color" />
        <attr name="remove_mode">
            <enum name="clickRemove" value="0" />
            <enum name="flingRemove" value="1" />
        </attr>
        <attr name="track_drag_sort" format="boolean" />
        <attr name="float_alpha" format="float" />
        <attr name="slide_shuffle_speed" format="float" />
        <attr name="remove_animation_duration" format="integer" />
        <attr name="drop_animation_duration" format="integer" />
        <attr name="drag_enabled" format="boolean" />
        <attr name="sort_enabled" format="boolean" />
        <attr name="remove_enabled" format="boolean" />
        <attr name="drag_start_mode">
            <enum name="onDown" value="0" />
            <enum name="onMove" value="1" />
            <enum name="onLongPress" value="2" />
        </attr>
        <attr name="drag_handle_id" format="integer" />
        <attr name="fling_handle_id" format="integer" />
        <attr name="click_remove_id" format="integer" />
        <attr name="use_default_controller" format="boolean" />
    </declare-styleable>
	<declare-styleable name="SpeechButton">
        <attr name="textDefault" format="reference" />
        <attr name="textSelect" format="reference" />
        <attr name="textCancel" format="reference" />
    </declare-styleable>
    <declare-styleable name="LocusPassWordView">
        <attr name="locusOriginal" format="reference|color" />
        <attr name="locusClick" format="reference|color" />
        <attr name="locusClickError" format="reference|color" />
        <attr name="locusLine" format="reference|color" />
        <attr name="locusLineError" format="reference|color" />
        <attr name="locusLineSemicircle" format="reference|color" />
        <attr name="locusLineSemicircleError" format="reference|color" />
        <attr name="locusArraw" format="reference|color" />
    </declare-styleable>
</resources>